{
  "name": "kle-ng",
  "version": "0.11.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:headless": "playwright test --reporter=line",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chromium": "playwright test --project chromium --reporter=line",
    "test:e2e:update": "playwright test --update-snapshots=all --reporter=line",
    "test:e2e:update-chromium": "playwright test --project chromium --update-snapshots=all --reporter=line",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/ e2e/"
  },
  "dependencies": {
    "@ijprest/kle-serial": "github:adamws/kle-serial2#develop",
    "bootstrap": "^5.3.7",
    "bootstrap-icons": "^1.13.1",
    "decimal.js": "^10.6.0",
    "json5": "^2.2.3",
    "lz-string": "^1.5.0",
    "pinia": "^3.0.3",
    "polygon-clipping": "^0.15.7",
    "vue": "^3.5.18"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@tsconfig/node22": "^22.0.2",
    "@types/file-saver": "^2.0.7",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.16.5",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/eslint-plugin": "^1.3.4",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.31.0",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-vue": "~10.3.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "3.6.2",
    "sass": "^1.92.1",
    "typescript": "~5.8.0",
    "vite": "^7.0.6",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.4"
  }
}
