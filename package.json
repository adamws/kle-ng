{
  "name": "kle-ng",
  "version": "0.18.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest run --reporter=github-actions",
    "test:unit:watch": "vitest watch",
    "test:e2e": "playwright test",
    "test:e2e:headless": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chromium": "playwright test --project chromium",
    "test:e2e:update": "playwright test --update-snapshots=all",
    "test:e2e:update-chromium": "playwright test --project chromium --update-snapshots=all",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --log-level silent --write src/ e2e/"
  },
  "dependencies": {
    "@adamws/kle-serial": "github:adamws/kle-serial2#v0.18.1",
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "decimal.js": "^10.6.0",
    "json5": "^2.2.3",
    "lz-string": "^1.5.0",
    "pinia": "^3.0.4",
    "polygon-clipping": "^0.15.7",
    "vue": "^3.5.24"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@tsconfig/node22": "^22.0.2",
    "@types/file-saver": "^2.0.7",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/eslint-plugin": "^1.4.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.39.1",
    "eslint-plugin-playwright": "^2.3.0",
    "eslint-plugin-vue": "~10.5.1",
    "jiti": "^2.6.1",
    "jsdom": "^27.1.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "3.6.2",
    "sass": "^1.93.3",
    "typescript": "~5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-vue-devtools": "^8.0.3",
    "vitest": "^4.0.8",
    "vue-tsc": "^3.1.3"
  }
}
